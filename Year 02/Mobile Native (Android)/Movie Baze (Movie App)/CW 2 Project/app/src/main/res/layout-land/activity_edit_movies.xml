<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_image"
    tools:context=".EditMovies">

    <TextView
        android:id="@+id/edit_movies_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/styled_button_main"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/edit_movies_header" />

    <ListView
        android:id="@+id/list_item_edit_movies"
        android:layout_width="250dp"
        android:layout_height="245dp"
        android:layout_below="@+id/edit_movies_header"
        android:scrollbars="none"
        android:background="@drawable/styled_image_views"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"/>

</RelativeLayout>