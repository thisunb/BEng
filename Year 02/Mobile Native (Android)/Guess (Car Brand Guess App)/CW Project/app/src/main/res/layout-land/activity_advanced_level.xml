<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_image_land"
        tools:context=".AdvancedLevelActivity">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/styled_image_views"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/initial_score_text"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/image_description"
            android:background="@drawable/styled_image_views"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView1"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/image_description"
            android:background="@drawable/styled_image_views"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView2"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/image_description"
            android:background="@drawable/styled_image_views"/>

        <EditText
            android:id="@+id/vehicle1"
            android:layout_width="177dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="87dp"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:autofillHints=""
            android:background="@drawable/styled_spinner"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_your_guess_text"
            android:inputType="textPersonName"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/vehicle2"
            android:layout_width="177dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:autofillHints=""
            android:background="@drawable/styled_spinner"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_your_guess_text"
            android:inputType="textPersonName"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/vehicle3"
            android:layout_width="179dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="407dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:autofillHints=""
            android:background="@drawable/styled_spinner"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_your_guess_text"
            android:inputType="textPersonName"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/car_brand1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:gravity="center"
            android:text="@string/car_brand1"
            android:textSize="14sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/car_brand2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="73dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="287dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center"
            android:text="@string/car_brand2"
            android:textSize="14sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/car_brand3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="73dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="458dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:gravity="center"
            android:text="@string/car_brand3"
            android:textSize="14sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="36dp"
            android:text="@string/display_feedback"
            android:textSize="18sp"
            android:textStyle="italic"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="90dp"
            android:layout_height="39dp"
            android:layout_below="@+id/instruction"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/styled_countdown"
            android:gravity="center"
            android:text="@string/countdown_text"
            android:textColor="#00FF00"
            android:textSize="18sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/instruction_text1"
            android:textColor="#96AC6D"
            android:textStyle="bold|italic"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="20dp"
            android:background="@drawable/styled_spinner"
            android:onClick="submit"
            android:text="@string/submit_button_text"
            android:textAllCaps="false"
            android:textSize="18sp"/>

    </RelativeLayout>

</ScrollView>